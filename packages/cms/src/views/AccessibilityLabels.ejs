<%- include('modals/InfoModal') %>

<%- include('partials/Header') %> 
<%- include('modals/DynamicModal', {headings: [__('Key'), __('Label')], errors: ['Key is required', 'Label is required']})%>
<div class="homePageContainer">
  <div class="sideBar">
    <%- include('partials/SideTab') %> 
  </div>
  <div class="mainContentContainer">
    <div class="homeTopTextContainer">
      <h2><%= __('Accessibility Labels')%></h2>
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#dynamicModal"
        data-value="0"
      >
      <%= __('Add Accessibility Label')%>
      </button>
    </div>
    <div class="homeButtonContainer"></div>
    <div class="homeTableContainer">
      <table class="table table-striped table-borderless tableFixHead table-responsive">
        <thead>
          <tr>
            <th style="width: 30%" class="pointer" id="accessibilityLabelKey"><%= __('Key')%></th>
            <th style="width: 40%" class="pointer" id="accessibilityLabelLabel"><%= __('Label')%></th>
            <th style="width: 5%"><%= __('Edit')%></th>
            <th style="width: 5%"><%= __('Delete')%></th>
            <th style="width: 5%"><%= __('Live')%></th>
          </tr>
        </thead>
        <tbody id="accessibilityLabelContainer"  style="overflow-y: scroll">
          <% accessibilityLabels.forEach((item) =>{ %>
          <tr>
            <td><%= item.key %></td>
            <td><%= item.label %></td>
            <td>
              <button
                type="button"
                class="btn"
                data-toggle="modal"
                data-target="#dynamicModal"
                data-value="<%= item.id %>"
              >
              <i class="fas fa-edit" aria-hidden="true"></i>
              </button>
            </td>
            <td>
              <button type="button" class="btn deleteAccessibilityLabel" data-value="<%= item.id %>">
                <i class="fas fa-trash" aria-hidden="true"></i>
              </button>
            </td>
            <td>
              <label class="switch">
                <input data-value="<%= item.id %>" class='liveCheckbox' type="checkbox" 
                <%if(item.live) {%>
                  checked
                <% }%>
                />
                <span class="slider round"></span>
              </label>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <span id="accessibilityLabelsJSON" hidden>
    <%= JSON.stringify(accessibilityLabels); %>
  </span>
  <script type="application/javascript" src="/scripts/accessibilityLabelsViewScript.js"></script>
</div>
<%- include('partials/Footer') %>

