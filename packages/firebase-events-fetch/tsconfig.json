{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "scripts": {
  "clean": "rimraf dist", // or any directory you want to clean
  "build": "tsc", // for TypeScript compilation
  "start": "ts-node src/main.ts" // your existing start command
}

}
